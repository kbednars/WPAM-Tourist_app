<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <Button
        android:id="@+id/profile_sign_out_button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/sign_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_scroll_view"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="username"
        app:layout_constraintStart_toStartOf="@+id/profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <TextView
        android:id="@+id/profile_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Points"
        app:layout_constraintStart_toEndOf="@+id/profile_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_points_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="125 pts"
        app:layout_constraintStart_toEndOf="@+id/profile_points"
        app:layout_constraintTop_toTopOf="@+id/profile_points" />

    <TextView
        android:id="@+id/profile_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Friends"
        app:layout_constraintStart_toStartOf="@+id/profile_points"
        app:layout_constraintTop_toBottomOf="@+id/profile_points" />

    <TextView
        android:id="@+id/profile_friends_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/profile_friends"
        app:layout_constraintTop_toTopOf="@+id/profile_friends" />

    <ScrollView
        android:id="@+id/friend_scroll_view"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_username">

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="acvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvnacvasndfijkansfvkjasndvaklsfvacvznxcvmxzCnv,zxmcvnaldvnaslkvn" />
    </ScrollView>

    <Button
        android:id="@+id/profile_edit_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Edit data"
        app:layout_constraintEnd_toEndOf="@+id/profile_sign_out_button"
        app:layout_constraintTop_toBottomOf="@+id/profile_sign_out_button" />

</androidx.constraintlayout.widget.ConstraintLayout>